{% extends 'base.html.twig' %}

{% block title %}Track{% endblock %}

{% block body %}
    <h1>Track</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ track.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ track.title }}</td>
            </tr>
            <tr>
                <th>Synopsis</th>
                <td>{{ track.synopsis }}</td>
            </tr>
            <tr>
                <th>ReleasedYear</th>
                <td>{{ track.releasedYear }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_web_track_index') }}">back to list</a>

    <a href="{{ path('app_web_track_edit', {'id': track.id}) }}">edit</a>

    {{ include('web/track/_delete_form.html.twig') }}
